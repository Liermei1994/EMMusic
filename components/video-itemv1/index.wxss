/* components/video-itemv1/index.wxss */
.item {
  width: 100%;
  margin-bottom: 20rpx;
}

.item .album {
  width: 100%;
  position: relative;
}

.item .album .image {
  width: 100%;
  border-radius: 5px;
  display: block;
}

.item .album .info {
  width: 100%;
  position: absolute;
  display: flex;
  bottom: 16rpx;
  color: #fff;
  font-size: 13px;
  justify-content: space-between;
}

.item .album .info .count .txt {
  margin-left: 40rpx;
}

.item .album .info .count::before {
  content: "";
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: 3rpx;
  left: 10rpx;
  background-size: cover;
  background-image: url('data:image/png;base64,');
}

.item .album .info .duration {
  margin-right: 16rpx;
}

.item .content {
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
  margin-top: 16rpx;
}